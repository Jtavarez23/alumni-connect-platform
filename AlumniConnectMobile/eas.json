{
  "cli": {
    "version": ">= 8.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "autoIncrement": true,
      "env": {
        "APP_ENV": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "autoIncrement": true,
      "env": {
        "APP_ENV": "staging"
      }
    },
    "production": {
      "autoIncrement": true,
      "distribution": "store",
      "channel": "production",
      "env": {
        "APP_ENV": "production"
      },
      "ios": {
        "enterpriseProvisioning": "universal",
        "bitcode": false,
        "resourceClass": "m1-medium",
        "cache": {
          "paths": [
            "node_modules/**/*",
            "assets/**/*",
            "./package.json"
          ]
        }
      },
      "android": {
        "buildType": "apk",
        "resourceClass": "medium",
        "cache": {
          "paths": [
            "node_modules/**/*",
            "assets/**/*",
            "./package.json"
          ]
        }
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "YOUR_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-key.json",
        "track": "production"
      }
    }
  }
}